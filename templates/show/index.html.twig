{% extends "base.html.twig" %}

{% block body %}
	<div class="container mt-5">
		<div class="img-fluid">
			<img src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
		</div>
		<div class="content">
			<p class="date">Ecrit le
				{{ article.createdAt | date("m/d/Y") }}
				par
				<span class="author">
					{{ article.author }}</span>
			</p>
			<h2 class="title">{{ article.title }}</h2>
			<p class="content text-justify">
				{{ article.content | raw }}
			</p>
		</div>
	</div>
{% endblock %}
