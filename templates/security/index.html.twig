{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Formulaire d'inscription
		</h1>
		{{ form_start(form) }}

		<div class="row">
			<div class="col-md-4">
				{{ form_row(form.username, {'label':"Nom d'utilisateur : ", 'attr': {
            'placeholder':"Veuillez indiquer votre nom d'utilisateur"
        }}) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.firstname, {'label':"Prénom : ", 'attr': {
        'placeholder':"Veuillez indiquer votre prénom"
    }}) }}
			</div>
			<div class="col-md-4">
				{{ form_row(form.lastname, {'label':"Nom : ", 'attr': {
            'placeholder':"Veuillez indiquer votre nom"
        }}) }}
			</div>
		</div>

		<div class="row">
			<div class="col-12">
				{{ form_row(form.email, {'label': "Email : ", 'attr': {
            'placeholder':"Veuillez indiquer votre email"
        }}) }}
			</div>
			<div class="col-12">
				{{ form_row(form.password, {'label': "Mot de passe : ", 'attr': {
            'placeholder':"Veuillez indiquer votre mot de passe"
        }}) }}
			</div>
			<div class="col-12">
				{{ form_row(form.passwordConfirm, {'label': "Confirmation du mot de passe : ", 'attr': {
            'placeholder':"Veuillez indiquer de nouveau votre mot de passe"
        }}) }}
			</div>
		</div>

		{{ form_widget(form) }}
		<button type="submit" class="btn btn-success mt-3">S'inscrire</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
