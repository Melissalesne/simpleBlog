{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<h1 class="title p-1 text-center">
		Actualit√©s
	</h1>
	<div class="container mt-5">
		<div class="row">
			<div class="col-md-8">
				<div class="row">
					{% for article in articles %}
						<div class="card col-md-4 mb-3 ">
							<p class="date">Ecrit le
								{{ article.createdAt | date("m/d/Y") }}
							</p>
							<img class="card-img-top" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
							<div class="card-body">
								<h5 class="card-title">{{ article.title }}</h5>
								<a href="{{ path('show', {'id':article.id})}}" class="btn btn-primary">En savoir plus</a>
							</div>
						</div>

					{% endfor %}
				</div>
			</div>
			<div class="col-md-4 mt-2 p-4 ">
				<h2 class="text-center">Categories</h2>
				<ul class="list-group">
					{% for category in categories %}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							<a href="{{ path('show_article', {'id':category.id}) }}">{{ category.title }}
								<span class="badge bg-primary rounded-pill">{{ category.articles | length }}
									contenu(s)</span>
							</a>
						</li>
					{% endfor %}

				</ul>
			</div>

		</div>
	</div>


{% endblock %}
